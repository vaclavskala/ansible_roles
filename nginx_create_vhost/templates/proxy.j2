upstream {{ nginx_create_vhost_domain[0] | regex_replace('\.','_') }} {
{% if nginx_create_vhost_proxy_ip | length > 1 %}
    least_conn;
{% endif %}
{% if (nginx_worker_processes > 1) or (nginx_worker_processes == 'auto') %}
    zone upstreams 64K;
{% endif %}
    keepalive {{ nginx_create_vhost_keepalive_count }};
    keepalive_timeout {{ nginx_create_vhost_keepalive_timeout }};
{% for ip in nginx_create_vhost_proxy_ip %}
    server {{ ip }}:{{ nginx_create_vhost_proxy_port }}{% if nginx_create_vhost_proxy_ip | length > 1 %} max_fails=2 fail_timeout=2s {% endif %};
{% endfor %}
}

server {
{% for ip in nginx_create_vhost_ip %}
    listen {{ ip }}:443 ssl http2;
{% endfor %}

{% for domain in nginx_create_vhost_domain %}
    server_name {{ domain }};
{% endfor %}

{% if nginx_create_vhost_use_dehydrated %}
    ssl_certificate     /etc/dehydrated/certs/{{ nginx_create_vhost_domain[0] }}/fullchain.pem;
    ssl_certificate_key /etc/dehydrated/certs/{{ nginx_create_vhost_domain[0] }}/privkey.pem;
{% else %}
    ssl_certificate     {{ nginx_create_vhost_ssl_cert }};
    ssl_certificate_key {{ nginx_create_vhost_ssl_key }};
{% endif %}

    location / {
        proxy_pass {{ nginx_create_vhost_proxy_protocol }}://{{ nginx_create_vhost_domain[0] | regex_replace('\.','_') }};
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass_header Set-Cookie;
        proxy_read_timeout 30m;
        proxy_connect_timeout 30m;
{% if nginx_create_vhost_custom_config is defined %}
        {{ nginx_create_vhost_custom_config }}{% endif %}
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
{% for ip in nginx_create_vhost_whitelist %}
        allow {{ ip }};
{% endfor %}
        deny all;
{% endif %}
    }
    access_log {{ nginx_log_path }}/{{ nginx_create_vhost_domain[0] }}-access.log main buffer=4k flush=60;
    error_log  {{ nginx_log_path }}/{{ nginx_create_vhost_domain[0] }}-error.log error;
}
